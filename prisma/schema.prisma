generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UBPaper {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  number    Int      @unique
  title     String   @unique
  updatedAt DateTime @updatedAt

  ubParagraphs UBParagraph[]
  ubSections   UBSection[]

  @@map("ub_papers")
}

model UBSection {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  paperId   String
  title     String
  updatedAt DateTime @updatedAt

  ubPaper      UBPaper       @relation(fields: [paperId], references: [id])
  ubParagraphs UBParagraph[]

  @@unique([paperId, title])
  @@map("ub_sections")
}

model UBParagraph {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  paperId   String
  reference String   @unique
  sectionId String
  text      String
  updatedAt DateTime @updatedAt

  ubPaper UBPaper   @relation(fields: [paperId], references: [id])
  section UBSection @relation(fields: [sectionId], references: [id])

  @@map("ub_paragraphs")
}

model User {
  createdAt DateTime @default(now())
  email     String   @unique
  id        String   @id @default(cuid())
  name      String?
  updatedAt DateTime @updatedAt

  apiKeys UserApiKey[]

  @@map("users")
}

model UserApiKey {
  createdAt DateTime @default(now())
  expiresAt DateTime
  id        String   @id @default(cuid())
  key       String   @unique
  updatedAt DateTime @updatedAt
  userId    String

  user User @relation(fields: [userId], references: [id])

  @@map("user_api_keys")
}
