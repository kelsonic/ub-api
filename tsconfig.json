{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "paths": {
      "@controllers/*": ["src/controllers/*"],
      "@data/*": ["src/data/*"],
      "@routes/*": ["src/routes/*"],
      "@scripts/*": ["scripts/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "es2016",
  }
}
